generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  pgs          PG[]

  @@map("users")
}

model PG {
  id        Int       @id @default(autoincrement())
  name      String
  address   String
  image     String?
  ownerId   Int
  owner     User      @relation(fields: [ownerId], references: [id])
  students  Student[]
  createdAt DateTime  @default(now())

  @@map("pgs")
}

model Student {
  id         Int       @id @default(autoincrement())
  name       String
  email      String?
  phone      String?
  pgId       Int
  pg         PG        @relation(fields: [pgId], references: [id])
  monthlyFee Float     @default(0)
  payments   Payment[]
  createdAt  DateTime  @default(now())

  @@map("students")
}

model Payment {
  id        Int       @id @default(autoincrement())
  studentId Int
  student   Student   @relation(fields: [studentId], references: [id])
  month     String
  amount    Float
  paid      Boolean   @default(false)
  paidAt    DateTime?
  dueDate   DateTime
  createdAt DateTime  @default(now())

  @@map("payments")
}
